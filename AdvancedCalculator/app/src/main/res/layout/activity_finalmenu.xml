<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"




    android:background="@drawable/mback2"
    tools:context=".Finale">






    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="120dp"
        android:orientation="horizontal"


        android:weightSum="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/mback2"


            android:weightSum="3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/menuback2"
                android:layout_weight="1">

                <androidx.cardview.widget.CardView
                    android:layout_width="170dp"
                    android:layout_height="160dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"


                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="1dp"
                    android:layout_marginRight="5dp"
                    android:padding="5dp"

                    app:cardCornerRadius="5dp"

                    app:cardElevation="30dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_gravity="center|top"
                        android:layout_margin="5dp"
                        android:background="#dee0de"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/cur"
                            android:layout_width="150dp"
                            android:layout_height="130dp"
                            android:layout_gravity="center|top"
                            android:scaleType="centerCrop"
                            android:src="@drawable/cur" />

                        <TextView
                            android:layout_width="160dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="-3dp"
                            android:background="#dee0de"
                            android:text="Currency "
                            android:textAlignment="center"
                            android:textColor="#000"
                            android:textSize="15dp"
                            android:textStyle="normal">

                        </TextView>


                    </LinearLayout>


                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/menuback2"
                android:layout_weight="1">

                <androidx.cardview.widget.CardView
                    android:layout_width="170dp"
                    android:layout_height="160dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"


                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="1dp"
                    android:layout_marginRight="5dp"
                    android:padding="5dp"

                    app:cardCornerRadius="5dp"

                    app:cardElevation="30dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_gravity="center|top"
                        android:layout_margin="5dp"
                        android:background="#dee0de"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/bmi"
                            android:layout_width="150dp"
                            android:layout_height="130dp"
                            android:layout_gravity="center|top"
                            android:scaleType="centerCrop"
                            android:src="@drawable/bmi" />

                        <TextView
                            android:layout_width="160dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="-2dp"
                            android:background="#dee0de"
                            android:text="BMI"
                            android:textAlignment="center"
                            android:textColor="#000"
                            android:textSize="15dp"
                            android:textStyle="normal">

                        </TextView>


                    </LinearLayout>


                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/menuback2"
                android:layout_weight="1">

                <androidx.cardview.widget.CardView
                    android:layout_width="170dp"
                    android:layout_height="160dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"


                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="1dp"
                    android:layout_marginRight="5dp"
                    android:padding="5dp"

                    app:cardCornerRadius="5dp"

                    app:cardElevation="30dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_gravity="center|top"
                        android:layout_margin="5dp"
                        android:background="#dee0de"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/tem"
                            android:layout_width="150dp"
                            android:layout_height="130dp"
                            android:layout_gravity="center|top"
                            android:scaleType="centerCrop"
                            android:src="@drawable/tem" />

                        <TextView
                            android:layout_width="170dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="-4dp"
                            android:background="#dee0de"
                            android:text="Temperature"
                            android:textAlignment="center"
                            android:textColor="#000"
                            android:textSize="15dp"
                            android:textStyle="normal">

                        </TextView>


                    </LinearLayout>


                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"


            android:weightSum="3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/menuback2"
                android:layout_weight="1">

                <androidx.cardview.widget.CardView
                    android:layout_width="170dp"
                    android:layout_height="160dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"


                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="1dp"
                    android:layout_marginRight="5dp"
                    android:padding="5dp"

                    app:cardCornerRadius="5dp"

                    app:cardElevation="30dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_gravity="center|top"
                        android:layout_margin="5dp"
                        android:background="#dee0de"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/unit"
                            android:layout_width="150dp"
                            android:layout_height="130dp"
                            android:layout_gravity="center|top"
                            android:scaleType="centerCrop"
                            android:src="@drawable/unit" />

                        <TextView
                            android:layout_width="160dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="3dp"
                            android:background="#dee0de"
                            android:text="Unit"
                            android:textAlignment="center"
                            android:textColor="#000"
                            android:textSize="15dp"
                            android:textStyle="normal">

                        </TextView>


                    </LinearLayout>


                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/menuback2"
                android:layout_weight="1">

                <androidx.cardview.widget.CardView
                    android:layout_width="170dp"
                    android:layout_height="160dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"


                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="1dp"
                    android:layout_marginRight="5dp"
                    android:padding="5dp"

                    app:cardCornerRadius="5dp"

                    app:cardElevation="30dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_gravity="center|top"
                        android:layout_margin="5dp"
                        android:background="#dee0de"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/time"
                            android:layout_width="150dp"
                            android:layout_height="130dp"
                            android:layout_gravity="center|top"
                            android:scaleType="centerCrop"
                            android:src="@drawable/time" />

                        <TextView
                            android:layout_width="160dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="-3dp"
                            android:background="#dee0de"
                            android:text="Time"
                            android:textAlignment="center"
                            android:textColor="#000"
                            android:textSize="15dp"
                            android:textStyle="normal">

                        </TextView>


                    </LinearLayout>


                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/menuback2"
                android:layout_weight="1">

                <androidx.cardview.widget.CardView
                    android:layout_width="170dp"
                    android:layout_height="160dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"


                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="1dp"
                    android:layout_marginRight="5dp"
                    android:padding="5dp"

                    app:cardCornerRadius="5dp"

                    app:cardElevation="30dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_gravity="center|top"
                        android:layout_margin="5dp"
                        android:background="#dee0de"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/num"
                            android:layout_width="150dp"
                            android:layout_height="130dp"
                            android:layout_gravity="center|top"
                            android:scaleType="centerCrop"
                            android:src="@drawable/num" />

                        <TextView
                            android:layout_width="160dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="6dp"
                            android:background="#dee0de"
                            android:text="Number System"
                            android:textAlignment="center"
                            android:textColor="#000"
                            android:textSize="15dp"
                            android:textStyle="normal">

                        </TextView>


                    </LinearLayout>


                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>

